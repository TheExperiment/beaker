{
  "name": "Defaut Build",
  "version": "1.0.0",
  "description": "Default build",
  "dependencies": {},
  "devDependencies": {
    "clean-css": "^3.4.19",
    "http-server": "^0.9.0",
    "jshint": "^2.9.3",
    "mocha": "^3.0.2",
    "uglify-js": "^2.7.3",
    "watch": "^0.19.2"
  },
  "scripts": {
    "info": "echo 'npm as a build tool'",
    "lint": "echo '=> linting' && jshint test/*.js",
    "test": "echo '=> testing' && mocha test/*.js",
    "minify:js": "echo '=> minify:js' && uglifyjs js/test.js -o dist/public/js/main.min.js",
    "minify:css": "echo '=> minify:css' && cleancss css/style.css -o dist/public/css/main.min.css",
    "build": "echo '=> building' && npm run test -s && npm run minify:js -s && npm run minify:css -s",
    "pretest": "npm run lint -s",
    "watch": "watch 'npm run minify:js && npm run minify:css' js/ css/",
    "server": "http-server dist/public/"
  },
  "author": "Experiment",
  "license": "Open"
}
